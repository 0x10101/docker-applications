{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "docker",
    "isShellCommand": true,
    "args": [
        "exec",
        "showcase_nodejs_1"
    ],
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "build",
            "suppressTaskName": true,
            "isBuildCommand": true,
            "isWatching": false,
            "args": [
                "gulp"
            ]
        },
        {
            "taskName": "debug",
            "suppressTaskName": true,
            "isBuildCommand": false,
            "isWatching": false,
            "args": [
                "node",
                "--debug-brk",
                "--nolazy",
                "code/processMessages.js"
            ]
        }
    ]
}