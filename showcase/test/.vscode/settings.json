// Place your settings in this file to overwrite default and user settings.
{
    "tslint.configFile": "${workspaceRoot}/tools/tslint/tslint-node.json",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": true
    }
}